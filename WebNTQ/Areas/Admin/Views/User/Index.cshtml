@model WebNTQ.Areas.Admin.Models.CreateModel
@{
    ViewBag.Title = "Add User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section sidebar{
    <li class="nav-item">
        <a class="nav-link" href="index.html">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Home</span>
        </a>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Heading -->
    <!-- Nav Item - Pages Collapse Menu -->
    <li class="nav-item">
        <a class="nav-link " href="#">
            <i class="fas fa-fw fa-cog"></i>
            <span>List Users</span>
        </a>
    </li>
    <hr class="sidebar-divider">
    <!-- Nav Item - Utilities Collapse Menu -->
    <li class="nav-item">
        <a class="nav-link " href="#">
            <i class="fas fa-fw fa-wrench"></i>
            <span>List Reviews</span>
        </a>
    </li>
    <hr class="sidebar-divider">
    <li class="nav-item">
        <a class="nav-link " href="#">
            <i class="fas fa-fw fa-folder"></i>
            <span>List Products</span>
        </a>
    </li>
    <hr class="sidebar-divider">
    <li class="nav-item">
        <a class="nav-link " href="#">
            <i class="fas fa-fw fa-table"></i>
            <span>My Profile</span>
        </a>
    </li>

}@section bodymain{
    <div class="card-body p-0">
        @if (TempData["UserMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                </button> <h5><i class="icon fas fa-check"></i> @TempData["UserMessage"]</h5>
            </div>
        }
        <!-- Nested Row within Card Body -->
        <div class="row">
            @Html.AntiForgeryToken()
            <div class="col-lg-6">
                <div class="p-5">
                    <h1 class="h4 text-gray-900 mb-2">
                        Add User
                    </h1>
                    @using (Html.BeginForm("Create", "User", FormMethod.Post))
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                        <div class="form-group">
                            UserName
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control form-control-user", @autofocus = "autofocus", @placeholder = "Type your username" })

                        </div>
                        <div class="form-group">
                            Password
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-user", @autofocus = "autofocus", @placeholder = "Type your password" })

                        </div>
                        <div class="form-group">
                            Email
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-user", @autofocus = "autofocus", @placeholder = "Type your email" })

                        </div>
                        <a>
                            <input type="submit" value="Create" class="btn btn-primary btn-user btn-block" />
                        </a>
                    }
                    <hr>
                    <a href="#" style="background-color: #1cc88a;" class="btn btn-primary btn-user btn-block icon">
                        <i class="fas fa-arrow-left"></i>
                        Back
                    </a>


                </div>
            </div>
        </div>
    </div>
}