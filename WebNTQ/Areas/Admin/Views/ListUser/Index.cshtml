@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        @if (TempData["UserMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                </button> <h5><i class="icon fas fa-check"></i> @TempData["UserMessage"]</h5>
            </div>
        }
        @if (TempData["EditUserMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                </button> <h5><i class="icon fas fa-check"></i> @TempData["EditUserMessage"]</h5>
            </div>
        }
        <div class="panel panel-default">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h2 class="m-0 font-weight-bold text-primary" style="text-align:center;">List user</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Index", "ListUser", FormMethod.Get))
                    {
                        <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <div class="input-group" style="margin-top:20px;margin-bottom:20px">

                                <input type="text" value="@ViewBag.SearchString" class="form-control bg-light border-0 small" placeholder="Search for..." name="searchString"
                                       aria-label="Search" aria-describedby="basic-addon2" style="margin-right:5px">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fas fa-search fa-sm"></i>
                                    </button>

                                </div>
                            </div>

                        </form>

                    }
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>Password</th>
                                    <th>CreateAt</th>
                                    <th>UpdateAt</th>
                                    <th>DeleteAt</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count == 0)
                                {
                                    <tr>
                                        <td colspan="9" class="text-center">No Data</td>
                                    </tr>
                                }
                                @if (Model.Count != 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr id="row_@item.ID">


                                            <td>@item.UserName</td>
                                            <td>@item.Email</td>
                                            <td><span class="password">@item.Password</span></td>
                                            <td>@item.CreateAt</td>
                                            <td>@item.UpdateAt</td>
                                            <td>@item.DeleteAt</td>
                                            <td><a style="text-decoration:none" data-id="@item.ID">@(item.Role == 1 ? "Admin" : "User")</a></td>
                                            <td><a style="text-decoration:none" data-id="@item.ID">@(item.Status == true ? "Chưa xóa" : " Đã Xóa")</a></td>
                                            <td>
                                                <a style="text-decoration:none" href="/Admin/User/Edit/@item.ID">Edit</a> |
                                                <a style="text-decoration:none" href="/Admin/User/Delete/@item.ID">Delete</a>
                                            </td>

                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
                        <script>
                            // Lấy tất cả các phần tử có class là "password"
                            var passwordFields = document.querySelectorAll(".password");

                            // Với mỗi phần tử, thay thế giá trị bằng dấu *
                            passwordFields.forEach(function (field) {
                                field.textContent = "*".repeat(field.textContent.length);
                            });
                        </script>
                    </div>
                    <div class="input-group-append">
                        <a class="btn btn-primary" href="/Admin/User/Index">Add User</a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
